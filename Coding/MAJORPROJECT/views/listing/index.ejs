<% layout("/layout/boilerplate") %>

    <body>
        <h3>All Listing</h3>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for (let listing of allListing) { %>
                <a href="/listing/<%=listing.id %>" class="listing-link">
                    <div class="card col">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
                        <div class="card-img-overlay">

                        </div>
                        <div class="card-body">
                            <p class="card-text">
                            <h6>
                                <%=listing.title %>
                                    <br>
                                    &#x20b9;  <%= listing.price ? listing.price.toLocaleString("en-IN") : 'Price not available' %>
                                </h6>

                            </p>
                        </div>
                    </div>
                    <% } %>
                        </ul>
                </a>
        </div>
    </body>

    </html>