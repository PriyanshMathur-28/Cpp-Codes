<% layout("/layout/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <body>
            <h3>Listing Details:</h3>
        </body>
    </div>
    <div class="card col-6 offset-3 show-card">
        <br>
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
        <br>
        <div class="card-body">
            <p class="card-text">
                <b>
                    <%= listing.title %> <br>
                </b>
                <br>
                <%= listing.description %> <br><br>
                &#x20B9; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <br><br>
                <%= listing.location %> <br><br>
                <%= listing.country %> <br><br>
            </p>
        </div>
    </div>
    <div class="btns">
        <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn"><b>EDIT</b></a>
        <form method="post" action="/listing/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
</div>
<br><br><br>
